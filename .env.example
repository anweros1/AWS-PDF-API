# PDF API Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Database Configuration
DB_CONNECTION_STRING=Server=sqlserver;Database=PdfApiLogs;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True
SQL_SA_PASSWORD=YourStrong@Passw0rd

# AWS S3 Configuration (leave empty to use local fallback)
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=eu-north-1

# PDF Settings
PDF_TEMP_FOLDER=/app/temp/pdfs
PDF_FALLBACK_FOLDER=/app/pdfs/fallback
PDF_MAX_FILE_SIZE_MB=100
PDF_AUTO_CREATE_FOLDERS=true

# Logging
LOG_LEVEL=Information
LOG_LEVEL_ASPNET=Warning

# Notes:
# - If AWS credentials are empty, the API will use local fallback storage
# - TempFolder and LocalFallbackFolder are created automatically if AutoCreateFolders=true
# - MaxFileSizeMb default is 100MB (adjust based on your needs)
# - Database connection string can point to external SQL Server if not using docker-compose SQL Server
